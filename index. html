<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Simple Test Game</title>
  <style>
    body { margin:0; overflow:hidden; background:black; }
    #box {
      width:50px; height:50px; background:red; position:absolute;
      top:50px; left:50px;
    }
  </style>
</head>
<body>
  <div id="box"></div>

  <script>
    const box = document.getElementById("box");
    let x = 50;

    setInterval(() => {
      x += 5;
      if (x > window.innerWidth) x = 0;
      box.style.left = x + "px";
    }, 50);

    box.onclick = () => alert("You clicked the box!");
  </script>
</body>
</html>
