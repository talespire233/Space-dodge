<style>
    body {
        margin: 0;
        font-family: Arial, sans-serif;
        background: #111;
        color: white;
        text-align: center;
    }
    #game-area {
        width: 100%;
        height: 80vh;
        background: #222;
        position: relative;
        overflow: hidden;
        border: 2px solid white;
    }
    #box {
        width: 60px;
        height: 60px;
        background: red;
        position: absolute;
        border-radius: 10px;
    }
    #score {
        font-size: 24px;
        margin-top: 10px;
    }
</style>
